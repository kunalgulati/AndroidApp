<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sfuRed</item>
        <item name="colorPrimaryDark">@color/sfuRedDark</item>
        <item name="colorAccent">@color/sfuBlue</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/sfuBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainActivityButtonStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/sfuBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">16dp</item>
    </style>

</resources>