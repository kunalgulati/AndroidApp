<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sfuRed</item>
        <item name="colorPrimaryDark">@color/sfuRedDark</item>
        <item name="colorAccent">@color/sfuBlue</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/sfuGold</item>
        <item name="android:textColor">@color/sfuRed</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
    </style>

</resources>
