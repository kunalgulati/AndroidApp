<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.CMPT.G1.StudentResources.MainActivity"
    android:background="@color/sfuRedDark">

    <ImageView
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_people_outline_black_48dp"/>

    <Button
        style="@style/MainActivityButtonStyle"
        android:id="@+id/student_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_student" />

    <ImageView
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_outline_black_48dp"/>

    <Button
        style="@style/MainActivityButtonStyle"
        android:id="@+id/advisor_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_advisor" />


</LinearLayout>